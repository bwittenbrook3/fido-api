h2 = @event.alert
ul
	li 
		|Date: 
		= @event.created_at.to_time.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y")
	li 
		|Time: 
		= @event.created_at.to_time.in_time_zone("Eastern Time (US & Canada)").strftime("%I:%M %p")
	li 
		|K9: 
		= @event.vest.K9 if @event.vest
	li 
		|Responding Officer: 
		= @event.vest.officer if @event.vest
	li 
		|Location:
		= "\n"
		= @event.address

	/!
		ul 
			li 
				|Lat: 
				= @event.latitude.to_s
				/!|33°46'37.3"N 
				li 
					|Long: 
					= @event.longitude.to_s
					/!|84°23'23.0"W
	p 
		|Details:  
		= @event.details

<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
javascript:
	$( document ).ready(function() {
		handler = Gmaps.build('Google');
		handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
		  markers = handler.addMarkers([
		    {
		      "lat": "#{@event.latitude}",
		      "lng": "#{@event.longitude}",
		      "picture": {
		        "url": "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
		        "width":  36,
		        "height": 36
		      },
		      "infowindow": "Suspicious Item Found!"
		    }
		  ]);
		  handler.bounds.extendWith(markers);
		  handler.fitMapToBounds()
		  handler.getMap().setZoom(17);
		});
	});
#map style='width: 100%; height: 300px;'